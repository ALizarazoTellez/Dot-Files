/.config/support/screenshot
/.config/support/toggle-hyprland-scale
/.config/support/waydroid-toggle-shortcuts
/.config/support/xdph

# Data irrelevant to Termux, because they were disabled in previous lines.
/.local/share/nwg-look
/.local/share/rofi

